{
  "name": "webpack-loader-denolint",
  "version": "1.1.2",
  "description": "A Webpack loader to lint entry points and all imported files with denolint.",
  "author": "Ferdinand Prantl <prantlf@gmail.com> (http://prantl.tk)",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/webpack-loader-denolint/blob/master/LICENSE"
    }
  ],
  "homepage": "http://github.com/prantlf/webpack-loader-denolint/",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/webpack-loader-denolint.git"
  },
  "bugs": {
    "url": "http://github.com/prantlf/webpack-loader-denolint/issues"
  },
  "type": "module",
  "module": "lib/index.js",
  "main": "lib/index.cjs",
  "types": "lib/index.d.ts",
  "exports": {
    "require": "./lib/index.cjs",
    "import": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "rollup -c",
    "lint": "denolint && tsc --noEmit test/index.ts",
    "check": "teru test/index.cjs && teru-esm test/*.js",
    "cover": "c8 teru-esm test/*.js",
    "test": "denolint && tsc --noEmit test/index.ts && teru test/index.cjs && c8 teru-esm test/*.js"
  },
  "c8": {
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "failComment": false
        }
      ],
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "loader-utils": "^3.2.1",
    "libdenolint": "^2.0.12"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.8.3",
    "c8": "^8.0.1",
    "denolint": "^2.0.12",
    "memfs": "^4.6.0",
    "rollup": "^4.0.2",
    "tehanu": "^1.0.1",
    "tehanu-repo-coco": "^1.0.0",
    "tehanu-teru": "^1.0.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-loader-denolint": "link:"
  },
  "peerDependencies": {
    "webpack": ">=5"
  },
  "keywords": [
    "webpack",
    "plugin",
    "loader",
    "webpack-loader",
    "webpack-plugin",
    "eslint",
    "denolint",
    "deno-lint",
    "deno",
    "lint"
  ]
}
